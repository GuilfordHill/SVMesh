# Development Dockerfile for React frontend
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose Vite dev server and HMR ports
EXPOSE 5173 24678

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]